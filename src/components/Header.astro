---
import { Image } from "astro:assets";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<header
  class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py10 max-w-7xl justify-self-center w-full"
>
  <a href="/" class="flex items-center gap-x-4">
    <Image
      src="/images/heartbeat.png"
      alt="Logo"
      class="rounded-2xl aspect-thumbnail object-cover"
      width={64}
      height={64}
      class="w-16"
    />
    <p class="text-3xl text-bold text-zinc-900">{title}</p>
  </a>
  <ul class="flex gap-x-8">
    <li><a href="/">Home</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/blog">Blog</a></li>
  </ul>
</header>
